<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="jbz_imap" class="JGG\Imap\Imap">
            <argument>%jbz_imap.host%</argument>
            <argument>%jbz_imap.username%</argument>
            <argument>%jbz_imap.password%</argument>
            <argument>%jbz_imap.port%</argument>
            <argument>%jbz_imap.ssl%</argument>
            <argument>%jbz_imap.folder%</argument>
        </service>
    </services>

</container>
